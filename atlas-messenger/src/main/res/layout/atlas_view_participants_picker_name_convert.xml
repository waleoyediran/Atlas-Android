<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AtlasMessagesScreen"
    
    android:layout_width="wrap_content"
    android:layout_height="24dp"
    
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    >

<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/atlas_shape_rounded24_gray"
    >

    <!-- avatar placeholder -->
	<TextView 
    	android:id="@+id/atlas_view_participants_picker_name_convert_ava"
    	android:layout_width="24dp"
    	android:layout_height="24dp"
    	android:layout_gravity="center"
    	android:background="@drawable/atlas_shape_circle_gray"
    	android:text="TS"
    	android:gravity="center"
    	/>
	
	<TextView
		android:id="@+id/atlas_view_participants_picker_name_convert_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_gravity="center"
	    android:paddingLeft="6dp"
	    android:text="Tomaz Stolfa" 
	    android:textSize="16sp"
        android:paddingRight="12dp"
        android:paddingBottom="1dp"
	    />
    
</LinearLayout>

</FrameLayout>